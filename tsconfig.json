{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true ,
    "sourceMap": true,
    "strict": true              
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "__test__"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true
  }
}
